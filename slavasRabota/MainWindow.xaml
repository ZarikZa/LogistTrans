<Window x:Class="slavasRabota.MainWindow"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slavasRabota"
        mc:Ignorable="d"
        Background="#3D3D3D"
        Title="MainWindow" WindowStartupLocation="CenterScreen" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontFamily="Times New Roman" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="48"/>
        <Border CornerRadius="10" Background="#C4C4C4" BorderBrush="#C4C4C4" Height="50" Width="300" Grid.Row="1"  >
            <TextBox x:Name="LognTbx" mat:HintAssist.Hint="Логин" FontFamily="Times New Roman" FontSize="20" Foreground="White" />
        </Border>
        <Border CornerRadius="10" Background="#C4C4C4" BorderBrush="#C4C4C4" Height="50" Width="300" Grid.Row="2"  >
            <TextBox x:Name="ParolTbx" mat:HintAssist.Hint="Пароль" FontFamily="Times New Roman" FontSize="20" Foreground="White" />
        </Border>
        <Button Content="Войти" Foreground="White" FontFamily="Times New Roman" FontSize="20" mat:ButtonAssist.CornerRadius="10" Height="50" Width="300" Style="{StaticResource MaterialDesignFlatButton}" Background="#0DBF40" Grid.Row="3" Click="Button_Click"/>
    </Grid>
</Window>
