<Window x:Class="slavasRabota.RukovoditelZakazi"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slavasRabota"
        mc:Ignorable="d"
        Title="RukovoditelZakazi"
        Background="#3D3D3D"
        WindowState="Maximized"
        Height="850" Width="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Руководитель" Grid.ColumnSpan="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="48"/>
        <Button x:Name="ExitBtm" Content="Выход" Height="60" FontSize="30" Foreground="White" FontFamily="Times New Roman" Grid.Column="1" Click="ExitBtm_Click"/>
        <Frame x:Name="FrameRukovod" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="SkladPereh" Content="Склад" Foreground="White" FontFamily="Times New Roman" FontSize="20" mat:ButtonAssist.CornerRadius="30" Height="60"  Style="{StaticResource MaterialDesignFlatButton}" Background="#0DBF40" Click="SkladPereh_Click" />
            <Button x:Name="RoutesPereh" Grid.Column="1" Content="Маршруты" Foreground="White" FontFamily="Times New Roman" FontSize="20" mat:ButtonAssist.CornerRadius="30" Height="60" Style="{StaticResource MaterialDesignFlatButton}" Background="#0DBF40" Click="RoutesPereh_Click"/>
            <Button x:Name="ClientsPereh" Grid.Column="2" Content="Клиенты" Foreground="White" FontFamily="Times New Roman" FontSize="20" mat:ButtonAssist.CornerRadius="30" Height="60"  Style="{StaticResource MaterialDesignFlatButton}" Background="#0DBF40" Click="ClientsPereh_Click" />
            <Button x:Name="TransportPereh" Grid.Column="3" Content="Транспорт" Foreground="White" FontFamily="Times New Roman" FontSize="20" mat:ButtonAssist.CornerRadius="30" Height="60"  Style="{StaticResource MaterialDesignFlatButton}" Background="#0DBF40" Click="TransportPereh_Click"/>
            <Button x:Name="ZakaziPereh" Grid.Column="4" Content="Заказы" Foreground="White" FontFamily="Times New Roman" FontSize="20" mat:ButtonAssist.CornerRadius="30" Height="60" Style="{StaticResource MaterialDesignFlatButton}" Background="#0DBF40" Click="ZakaziPereh_Click" />
            <Button x:Name="SotrudPereh" Grid.Column="5" Content="Сотрудники" Foreground="White" FontFamily="Times New Roman" FontSize="20" mat:ButtonAssist.CornerRadius="30" Height="60"  Style="{StaticResource MaterialDesignFlatButton}" Background="#0DBF40" Click="SotrudPereh_Click" />
            <Button x:Name="VoditeliPereh" Grid.Column="6" Content="Водители" Foreground="White" FontFamily="Times New Roman" FontSize="20" mat:ButtonAssist.CornerRadius="30" Height="60" Style="{StaticResource MaterialDesignFlatButton}" Background="#0DBF40" Click="VoditeliPereh_Click" />
        </Grid>
    </Grid>
</Window>
